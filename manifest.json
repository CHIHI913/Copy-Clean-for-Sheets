{
  "manifest_version": 3,
  "name": "Copy Clean for Sheets",
  "version": "1.0.0",
  "author": "Copy Clean for Sheets",
  "description": "Copy cells from Google Sheets without quotes as plain text",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/spreadsheets/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}